<?xml version="1.0" encoding="UTF-8" ?>
<simulationConfig>
  <!-- window and grid configuration -->
  <display author="Palo" height="800" title="Fire Simulation" width="800">
    <description text="Fire simulation with random cell proportions"/>
    <grid cellShape="Rectangular" columns="6" edgeType="Toroidal" neighborhoodType="VonNeumann"
      rows="6"/>
  </display>

  <!-- sim configuration -->
  <init
    proportions=
      "T:0.5,
       B:0.1"
    randomStates="true"
  >
  </init>
  <sim type="Fire">
    <simvars
      probCatch="0.003"
      probGrow="0.03"
    />
  </sim>

</simulationConfig>