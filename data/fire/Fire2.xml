<?xml version="1.0" encoding="UTF-8" ?>
<simulationConfig>
  <!-- window and grid configuration -->
  <display author="Palo" height="800" title="Fire Simulation" width="800">
    <description text="This is the forest fire simulation"/>
    <grid cellShape="Rectangular" columns="5" edgeType="Toroidal" neighborhoodType="VonNeumann"
      rows="5"/>
  </display>

  <!-- sim configuration -->
  <init
    stateList=
      "B,E,E,E,E,
        B,E,E,T,E,
        T,T,E,E,B,
        B,T,E,E,E,
        T,T,E,E,B"
  >
  </init>
  <sim type="Fire">
    <simvars
      probCatch="0.003"
      probGrow="0.03"
    />
  </sim>

</simulationConfig>
