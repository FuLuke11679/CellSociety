<?xml version="1.0" encoding="UTF-8" ?>
<simulationConfig>
  <!-- window and grid configuration -->
  <display author="Daniel" height="800" title="WatorWorld Simulation" width="800">
    <description text="This is the WatorWorld simulation"/>
    <grid cellShape="Rectangular" columns="5" edgeType="Toroidal" neighborhoodType="VonNeumann"
      rows="5"/>
  </display>

  <!-- sim configuration -->
  <init
    stateList=
      "W,W,W,W,W,
       W,W,W,W,W,
       W,S,F,W,W,
       W,W,W,W,W,
       W,W,W,W,W"
  >
  </init>

  <sim type="WatorWorld">
    <simvars
      fishBreedTime="10"
      sharkBreedTime="3"
      sharkEnergyGain="5"
    />
  </sim>

</simulationConfig>
