<?xml version="1.0" encoding="UTF-8" ?>
<simulationConfig>
  <!-- window and grid configuration -->
  <display width="800" height="800" title="Game of Life" author="Palo">
    <grid rows="6" columns="6" />
    <description text="This is the Game of Life simulation"/>
  </display>

  <!-- sim configuration -->
  <sim type="GameOfLife">
    <simvars
      birthThreshold = "3"
      survivalThreshold = "2,3"
    />
  </sim>
  <init
    randomStates = "true"
    proportions =
      "X:0.4"
  >
  </init>

</simulationConfig>