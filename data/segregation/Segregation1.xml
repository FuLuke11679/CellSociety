<?xml version="1.0" encoding="UTF-8" ?>
<simulationConfig>
  <!-- window and grid configuration -->
  <display author="Palo" height="800" title="Segregation Simulation" width="800">
    <description text="This is the segregation simulation"/>
    <grid cellShape="Rectangular" columns="5" edgeType="Toroidal" neighborhoodType="ExtendedMoore"
      rows="5"/>
  </display>

  <!-- sim configuration -->
  <init
    stateList=
      "R,R,BLU,EM,EM,
        BLU,BLU,EM,EM,EM,
        EM,EM,EM,EM,EM,
        EM,BLU,R,R,EM,
        EM,EM,R,BLU,BLU"
  >
  </init>
  <sim type="Segregation">
    <simvars
      thresh="0.5"
    />
  </sim>

</simulationConfig>
