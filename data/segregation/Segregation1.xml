<?xml version="1.0" encoding="UTF-8" ?>
<simulationConfig>
  <!-- window and grid configuration -->
  <display width="800" height="800" title="Segregation Simulation" author="Palo">
    <grid rows="5" columns="5" />
    <description text="This is the segregation simulation"/>
  </display>

  <!-- sim configuration -->
  <sim type="Segregation">
    <simvars
      thresh = "0.5"
    />
  </sim>
  <init
    stateList =
      "R,R,BLU,EM,EM,
        BLU,BLU,EM,EM,EM,
        EM,EM,EM,EM,EM,
        EM,BLU,R,R,EM,
        EM,EM,R,BLU,BLU"
  >
  </init>

</simulationConfig>
