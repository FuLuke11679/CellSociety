<?xml version="1.0" encoding="UTF-8" ?>
<simulationConfig>
  <!-- window and grid configuration -->
  <display author="Luke" height="800" title="Segregation Simulation" width="800">
    <description text="This is the segregation simulation"/>
    <grid cellShape="Rectangular" columns="21" edgeType="Toroidal" neighborhoodType="ExtendedMoore"
      rows="21"/>
  </display>

  <!-- sim configuration -->
  <random>
    <state count="150">BLU</state> <!-- 150 Blue cells -->
    <state count="150">R</state> <!-- 150 Red cells -->
  </random>
  <sim type="Segregation">
    <simvars
      thresh="0.6"
    />
  </sim>
</simulationConfig>